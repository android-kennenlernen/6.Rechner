<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/etDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="numberDecimal"
        android:text="0." >

        <requestFocus />
    </EditText>
    
    <GridLayout
        android:id="@+id/glKeys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:columnCount="4"
        android:rowCount="5" >

        <Button
            android:id="@+id/btnNum_7"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="onClickBtnNum"
            android:text="7" />

        <Button
            android:id="@+id/btnNum_9"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="onClickBtnNum"
            android:text="9" />

        <Button
            android:id="@+id/btnOp_Div"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="onClickBtnOp"
            android:text="÷" />

        <Button
            android:id="@+id/btnNum_4"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="onClickBtnNum"
            android:text="4" />

        <Button
            android:id="@+id/btnNum_5"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="onClickBtnNum"
            android:text="5" />

        <Button
            android:id="@+id/btnNum_8"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:onClick="onClickBtnNum"
            android:text="8" />

        <Button
            android:id="@+id/btnNum_6"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="onClickBtnNum"
            android:text="6" />

        <Button
            android:id="@+id/btnOp_Mul"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:onClick="onClickBtnOp"
            android:text="*" />

        <Button
            android:id="@+id/btnNum_1"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="onClickBtnNum"
            android:text="1" />

        <Button
            android:id="@+id/btnNum_2"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="onClickBtnNum"
            android:text="2" />

        <Button
            android:id="@+id/btnNum_3"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="onClickBtnNum"
            android:text="3" />

        <Button
            android:id="@+id/btnOp_Minus"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:onClick="onClickBtnOp"
            android:text="-" />

        <Button
            android:id="@+id/btnNum_0"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:onClick="onClickBtnNum"
            android:text="0" />

        <Button
            android:id="@+id/btnNum_Period"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:onClick="onClickBtnNum"
            android:text="." />

        <Button
            android:id="@+id/btnNum_Invert"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:onClick="onClickBtnNum"
            android:text="±" />

        <Button
            android:id="@+id/btnOp_Plus"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:onClick="onClickBtnOp"
            android:text="+" />

        <Button
            android:id="@+id/btnOp_Clear"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:onClick="onClickBtnOp"
            android:text="C" />

        <Button
            android:id="@+id/btnOp_Equals"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="left|bottom"
            android:layout_row="4"
            android:onClick="onClickBtnOp"
            android:text="=" />
    </GridLayout>


</RelativeLayout>
